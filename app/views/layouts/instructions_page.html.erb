<!DOCTYPE html>
<html>
  <head>
    <title>Faceboom</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="<%= yield :class %>-page-wrapper">
        <div class="card" data-turbo="false">
            <h1 class="page-heading"><%= yield :heading %></h1>

            <hr>

            <%= form_for(resource, as: resource_name, url: yield(:path), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="flexbox flex-column gap-16 py-6">
                    <p class="dark-color"><%= yield :message %></p>

                    <div class="field">
                        <%= f.label :email %>

                        <div class="control">
                            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input', placeholder: 'E-mail' %>
                        </div>
                    </div>
                </div>

                <hr>
                
                <div class="flexbox flex-justify-end gap-8">
                    <%= link_to 'Cancel', new_user_session_path, data: { turbo: true } %>
                    <%= f.submit 'Send' %>
                </div>
            <% end %>
        </div>
    </div>
  </body>
</html>
