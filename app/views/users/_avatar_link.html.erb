<% size = size || '40px' %>

<a href="<%= user_path user %>" style="height: <%= size %>; width: <%= size %>;">
    <%= image_tag user.avatar, class: 'hover-shadow', style: "
        min-width: #{size}; min-height: #{size};
        max-width: #{size}; max-height: #{size};
        border-radius: 50%;"
    %>
</a>
