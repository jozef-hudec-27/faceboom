<h1>Respond to a comment</h1>

<h2>By <%= @original_comment.user.full_name %></h2>
<p><%= @original_comment.body %></p>

<%= turbo_frame_tag 'comment-reply-form' do %>
    <%= link_to 'Close', post_path(@original_comment.commentable) %>
    <%= form_with model: @new_comment, url: post_comments_path(@original_comment.commentable) do |f| %>
        <%= f.hidden_field :comment_id, value: @original_comment.id, name: 'comment_id' %>
        <%= f.text_area :body %><br>
        <%= f.submit 'Respond' %>
    <% end %>
<% end %>